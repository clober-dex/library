{
  "name": "@clober/library",
  "description": "\uD83C\uDF40 Solidity libraries that are shared across Clober contracts",
  "version": "1.0.0",
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "scripts": {
    "fork": "npx hardhat node",
    "compile": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat compile",
    "hardhat:coverage": "npx hardhat coverage",
    "hardhat:test": "npx hardhat test",
    "forge:test": "forge test -vv",
    "precommit": "pre-commit install",
    "prettier:ts": "prettier --check \"{,!(node_modules)/**/}*.ts\"",
    "prettier:fix:ts": "prettier --write \"{,!(node_modules)/**/}*.ts\"",
    "lint:sol": "solhint -q 'contracts/**/*.sol' && prettier --check contracts/**/*.sol",
    "lint:fix:sol": "prettier --write 'contracts/**/*.sol' && solhint 'contracts/**/*.sol' --fix",
    "postinstall": "forge install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clober-dex/library.git"
  },
  "bugs": {
    "url": "https://github.com/clober-dex/library/issues"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "clober",
    "dex",
    "orderbook"
  ],
  "homepage": "https://clober.io/",
  "author": "Clober<official@clober.io>",
  "license": "https://license.clober.io/LICENSE.pdf",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.1",
    "@types/readline-sync": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-log-remover": "^2.0.2",
    "heap-js": "^2.2.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4",
    "web3": "^1.8.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.2",
    "solidity-docgen": "^0.6.0-beta.32"
  }
}
